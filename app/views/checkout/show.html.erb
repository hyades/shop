<div><h1><span class="label label-default">My Cart</span></h1></div>
<div>
	<ul class="list-group">
		
		<% @all_items.each do |i| %>
  			<li class="list-group-item">
  				<ul class="list-inline">

	  				<li><span class="label label-success"><%=i.instance_variable_get(:@pname)%></span> </li>
	  				<li><span class="label label-primary"><%=i.created_at%></span> </li>
	  				<li><span><%= button_to 'Delete', {:controller => "checkout", :action => "destroy",  :id => i.id, :user_id=> current_user} , :method=>:delete , :class=>"btn btn-sm btn-danger" %></span></li>
  				</ul>
  			</li>
	  	<% end %>
	</ul>
</div>